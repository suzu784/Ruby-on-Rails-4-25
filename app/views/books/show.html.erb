
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', user: @user, books: @books, book: @book_new %>
    </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table>
          <tbody>
            <tr>
              <p><%= link_to user_path(@user) do %></p>
                <td><%= image_tag @book.user.get_profile_image(100, 100)%></td>
                <p><%= link_to @user.name, user_path(@user) %></p>
              <% end %>

              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
                  <td><%= link_to "Destroy", book_path, method: :delete %></td>
                 <% end %>

            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

