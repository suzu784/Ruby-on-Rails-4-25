<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>

<h1>User info</h1>

 <table>
  <thead>
   <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Introduction</th>
   </tr>
  </thead>
  <tbody>
   <tr>
    <td><%= image_tag user.get_profile_image(100, 100) %></td>
    <td><%= user.name %></td>
    <td><%= user.introduction %></td>
   </tr>   
  </tbody>
 </table>

 <p><%= link_to "Edit", edit_user_path(user) %></p>
 
