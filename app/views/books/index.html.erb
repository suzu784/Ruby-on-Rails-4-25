<h1>User info</h1>

 <table>
  <thead>
   <tr>
    <th>Image</th>
    <th>Name</th>
    <th>Introduction</th>
   </tr>
  </thead>
  <tbody>
   <tr>
    <td><%= image_tag @user.get_profile_image(100, 100) %></td>
    <td><%= @user.name %></td>
    <td><%= @user.introduction %></td>
   </tr>   
  </tbody>
 </table>

 <p><%= link_to "Edit", edit_user_path(@books) %></p>


<h1>New book</h1>
 <%= form_with model: @book do |f| %>
   <h4>Title</h4>
     <%= f.text_field :title %>
   <h4>Opinion</h4>
     <%= f.text_area :opinion %><br>
   <%= f.submit "Create Book" %>
 <% end %>
 
<h1>Books</h1>
 
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th></th>
    </tr>
   </thead>
   
   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
     <td><%= link_to book_path(book.id) %></td>
     <td><%= book.opinion %></td>
    </tr>
   <% end %>
   </tbody>
  </table>
 
   