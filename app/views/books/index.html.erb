<%= render 'books/list', user: @user, books: @books, book: @book %>
 
<h1>Books</h1>
 
  <table>
   <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th></th>
    </tr>
   </thead>
   
   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.opinion %></td>
    </tr>
   <% end %>
   </tbody>
  </table>
 
   