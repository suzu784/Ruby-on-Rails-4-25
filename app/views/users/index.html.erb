

<div class="container">
   <div class="row">
      <div class="col-md-3">
         <%= render 'books/list', user: @user, book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">
         <h2>Users</h2>
         <table>
            <thead>
               <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
               </tr>
            </thead>
            <tbody>
               <% @users.each do |user| %>
               <tr>
                  <%= link_to user_path(@user) do %>
                     <td><%= image_tag user.get_profile_image(100, 100) %></td>
                     <td><%= user.name %></td>
                     <td><%= link_to "Show", user_path(user) %></td>
                  <% end %>
               </tr>
         <% end %>
            </tbody>
         </table>
      </div>
   </div>
</div>






