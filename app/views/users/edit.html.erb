<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-8">
  <%= form_with model: @user do |f| %>
    <label for = "inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %><br>
    <label for = "inputImage">Image</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
    <label for = "inputIntroduction">Introduction</label><br>
      <%= f.text_area :introduction, autofocus: true, id: "inputIntroduction", placeholder: "自己紹介" %><br>
      <%= f.submit "Update User" %>
    <% end %>
    </div>
  </div>
</div>
    
  

